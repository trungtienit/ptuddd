<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="200dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:background="@color/white80"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:background="@color/app_theme_color"
        style="@style/dialog_header"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_room_info"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        style="@style/dialog_info"/>

    <EditText
        android:id="@+id/edt_room_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:hint="@string/hint_room_name"
        style="@style/regular_editTexts"/>
    <Spinner
        android:id="@+id/sp_folder"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        style="@style/regular_editTexts" />
    <Button
        android:id="@+id/button_room_submit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/text_submit"
        android:textColor="@color/white"
        android:background="@color/app_theme_color"/>
</LinearLayout>