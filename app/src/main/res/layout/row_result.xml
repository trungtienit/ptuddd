<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_average"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_messages_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_default" />

        <ImageView
            android:layout_width="@dimen/margin_average"
            android:layout_height="@dimen/margin_average"
            android:layout_marginTop="20dp"
            android:src="@drawable/grey_node" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/left_node_bg_mix"
            android:gravity="center"
            android:orientation="vertical">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:padding="5dp"
                android:id="@+id/name_left"
                android:textColor="@color/white" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/app_background_color_1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/result_correct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:text="Correct:7"
                    android:textColor="@color/green1"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/result_uncorrect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Uncorrect:3"
                    android:paddingRight="10dp"
                    android:textColor="@color/red1"
                    android:textSize="17dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/text_time_messages_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_average"
            android:text="12:00"
            android:textColor="@color/text_color"
            android:textSize="10dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_messages_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_time_messages_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_average"
            android:text="12:00"
            android:textColor="@color/text_color"
            android:textSize="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/left_node_bg_mix"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:padding="5dp"
                android:id="@+id/name_right"
                android:textColor="@color/white"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/app_background_color_1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/result_correct-right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:text="Correct:7"
                    android:textColor="@color/green1"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/result_uncorrect-right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Uncorrect:3"
                    android:paddingRight="10dp"
                    android:textColor="@color/red1"
                    android:textSize="17dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/margin_average"
            android:layout_height="@dimen/margin_average"
            android:layout_marginTop="20dp"
            android:src="@drawable/purple_node_bg" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_default" />
    </LinearLayout>

</LinearLayout>
