<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_pick_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="210dp"
            android:src="@drawable/icon" />

        <ImageView
            android:layout_width="@dimen/margin_average"
            android:layout_height="@dimen/margin_average"
            android:layout_marginTop="225dp"
            android:src="@drawable/grey_node" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/left_node_bg"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_return_result"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/icon_result6"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/result_correct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correct:7"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/green1"/>
                <TextView
                    android:id="@+id/result_uncorrect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Uncorrect:3"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/red1"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/text_time_return_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_average"
            android:layout_marginTop="230dp"
            android:textColor="@color/text_color"
            android:text="12:00"
            android:textSize="10dp"/>

    </LinearLayout>




</LinearLayout>