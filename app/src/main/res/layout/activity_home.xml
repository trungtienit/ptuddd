<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvc.controllers.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btn_create_room"
            android:layout_width="@dimen/button_width_default"
            android:layout_height="@dimen/button_height_default"
            android:layout_margin="@dimen/margin_extra_large"
            android:text="@string/create_room_label"
            android:padding="@dimen/padding_small"
            style="@style/regular_buttons"/>

        <Button
            android:id="@+id/btn_find_room"
            android:layout_height="@dimen/button_height_default"
            android:layout_width="@dimen/button_width_default"
            android:layout_margin="@dimen/margin_extra_large"
            android:text="@string/existing_room_label"
            android:padding="@dimen/padding_small"

            style="@style/regular_buttons"/>
    </LinearLayout>
</LinearLayout>
