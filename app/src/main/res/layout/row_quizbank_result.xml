<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_average"

    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_message_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_default" />

        <ImageView
            android:layout_width="@dimen/margin_average"
            android:layout_height="@dimen/margin_average"
            android:layout_marginTop="20dp"
            android:src="@drawable/grey_node" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/left_node_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_message_left"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="start"
                android:background="@drawable/topic_1" />


            <TextView
                android:id="@+id/text_message_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="180dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:textStyle="bold" />


        </LinearLayout>

        <TextView
            android:id="@+id/text_time_messages_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_average"
            android:text="12:00"
            android:textColor="@color/text_color"
            android:textSize="10dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_message_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_time_messages_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_average"
            android:text="12:00"
            android:textColor="@color/text_color"
            android:textSize="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/left_node_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_message_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="180dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_message_right"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="start"
                android:background="@drawable/topic_1" />

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/margin_average"
            android:layout_height="@dimen/margin_average"
            android:layout_marginTop="20dp"
            android:src="@drawable/purple_node_bg" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_default" />
    </LinearLayout>

</LinearLayout>
