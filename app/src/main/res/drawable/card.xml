<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient
                android:endColor="@color/White"
                android:centerColor="@color/White"
                android:startColor="@color/White"
                android:angle="270" />
            <corners
                android:radius="@dimen/ten_dimen" />
            <padding
                android:left="@dimen/ten_dimen"
                android:top="@dimen/ten_dimen"
                android:right="@dimen/ten_dimen"
                android:bottom="@dimen/ten_dimen" />
            <stroke android:color="@color/bg_color"
                android:width="@dimen/list_divider_hight">
            </stroke>

        </shape>
    </item>
    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <gradient
                android:startColor="@color/app_theme_color"
                android:endColor="@color/app_theme_color"
                android:angle="90"/>
            <corners
                android:radius="@dimen/ten_dimen" />
            <padding
                android:left="@dimen/ten_dimen"
                android:top="@dimen/ten_dimen"
                android:right="@dimen/ten_dimen"
                android:bottom="@dimen/ten_dimen" />
            <stroke android:color="@color/bg_color"
                android:width="@dimen/list_divider_hight">
            </stroke>

        </shape>
    </item>
</selector>


